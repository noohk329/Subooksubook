<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Space
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <Button
                android:id="@+id/btn_dailypage_input"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:background="@drawable/plus" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/tx_readcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="독서 카드"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4E4E4E"
                android:textColorHighlight="#FFFFFF"
                android:textSize="28sp"
                android:typeface="serif" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <LinearLayout
                android:id="@+id/diaryWrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/diaryContainer"
                    android:layout_width="329dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp">

                            <TextView
                                android:id="@+id/title_label"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="1dp"
                                android:layout_marginVertical="1dp"
                                android:background="@color/colorPrimary"
                                android:text="제목"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#FFFFFF"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="18sp"
                                android:typeface="serif" />

                            <TextView
                                android:id="@+id/tx_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#4E4E4E"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="14sp"
                                android:typeface="serif" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp">

                            <TextView
                                android:id="@+id/author_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="1dp"
                                android:layout_marginVertical="1dp"
                                android:background="@color/colorPrimary"
                                android:text="저자"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#FFFFFF"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="18sp"
                                android:typeface="serif" />

                            <TextView
                                android:id="@+id/tx_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#4E4E4E"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="18sp"
                                android:typeface="serif" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp">

                            <TextView
                                android:id="@+id/publisher_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="1dp"
                                android:layout_marginVertical="1dp"
                                android:background="@color/colorPrimary"
                                android:text="출판사"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#FFFFFF"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="18sp"
                                android:typeface="serif" />

                            <TextView
                                android:id="@+id/tx_publisher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#4E4E4E"
                                android:textColorHighlight="#FFFFFF"
                                android:textSize="18sp"
                                android:typeface="serif" />
                        </TableRow>
                    </TableLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <TableLayout
                        android:id="@+id/tablelayout_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tx_totalpage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tx_readfinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp" />
                    </TableRow>

                </LinearLayout>

                <Space
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>